#!/bin/bash
# =======================================================
# FORCE HARDWARE ACCELERATION (For Legacy Intel Machines)
# This script disables software rendering and forces
# control back to the GPU. Useful for games.
# =======================================================

# Disable software rendering enforcement
export LIBGL_ALWAYS_SOFTWARE=0

# Unset Cogl driver overrides to allow hardware detection
unset COGL_DRIVER
unset COGL_DEBUG

# Execute the provided command with all its arguments
exec "$@"
