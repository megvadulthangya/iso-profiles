! ================================
! CURSOR AND BASIC X SETTINGS
! ================================

! Cursor theme and size
Xcursor.theme: Nordic-cursors
!Xcursor.size: 24

! ================================
! FONT RENDERING SETTINGS
! ================================

! Font anti-aliasing and hinting
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

! DPI settings for proper scaling
Xft.dpi: 96

! ================================
! URXVT TERMINAL CONFIGURATION
! (Nordic Theme + Performance)
! ================================

! Betűtípus beállítása (A te rendszereden lévő FiraCode) - FONTOS: pontos beállítás a bővítményhez
URxvt.font: xft:FiraCode Nerd Font:size=12
URxvt.boldFont: xft:FiraCode Nerd Font:bold:size=12

! Gördítősáv kikapcsolása (Szebb, Quake-style kinézet)
URxvt.scrollBar: false

! Kurzor villogás kikapcsolása (kíméli az erőforrást és a szemet)
URxvt.cursorBlink: true

! Perl bővítmények - resize-font hozzáadva, pontosan a dokumentáció szerint
URxvt.perl-ext-common: default,matcher,selection-to-clipboard,resize-font
URxvt.url-launcher: brave
URxvt.matcher.button: 1

! Puffer méret (hány sort jegyezzen meg visszafelé)
URxvt.saveLines: 5000

! ================================
! RESIZE-FONT PLUGIN CONFIGURATION - README alapján
! ================================

! Alapértelmezett billentyűkombinációk a dokumentáció szerint
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show

! Opcionális lépésméret beállítása (1-2 pixel ajánlott)
URxvt.resize-font.step: 1

! Opcionális méretkorlátok
URxvt.resize-font.min: 6
URxvt.resize-font.max: 32

! ================================
! NORD COLOR SCHEME & TRANSPARENCY
! ================================

! Átlátszóság (32 bites mélység kell hozzá)
URxvt.depth: 32

! Háttér: [85] jelenti az átlátszóság mértékét (0-100)
! A #2E3440 a hivatalos Nord háttérszín
URxvt.background:   [85]#2E3440
URxvt.foreground:   #D8DEE9
URxvt.cursorColor:  #D8DEE9

! Black (Nord Polar Night)
URxvt.color0:       #3B4252
URxvt.color8:       #4C566A

! Red (Nord Aurora Red)
URxvt.color1:       #BF616A
URxvt.color9:       #BF616A

! Green (Nord Aurora Green)
URxvt.color2:       #A3BE8C
URxvt.color10:      #A3BE8C

! Yellow (Nord Aurora Yellow)
URxvt.color3:       #EBCB8B
URxvt.color11:      #EBCB8B

! Blue (Nord Frost Blue)
URxvt.color4:       #81A1C1
URxvt.color12:      #81A1C1

! Magenta (Nord Aurora Purple)
URxvt.color5:       #B48EAD
URxvt.color13:      #B48EAD

! Cyan (Nord Frost Cyan)
URxvt.color6:       #88C0D0
URxvt.color14:      #8FBCBB

! White (Nord Snow Storm)
URxvt.color7:       #E5E9F0
URxvt.color15:      #ECEFF4

! ================================
! LEGACY / UNUSED SETTINGS
! ================================

! XTerm settings (tartaléknak)
! XTerm*faceName: Monospace
! XTerm*faceSize: 12
! XTerm*saveLines: 1000
